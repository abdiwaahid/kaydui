---
import { Prism } from "@astrojs/prism";
const { id, name, slug, code, category } = Astro.props;
---

<div class="mb-6">
  <div class="flex items-center justify-between">
    <h2 class="text-2xl font-bold text-gray-700">{name}</h2>
    <p class="text-sm text-gray-600">{category}</p>
  </div>
  <div
    class="w-full h-96 p-6 border rounded-xl overflow-auto grid place-items-center"
  >
    <Fragment set:html={code} />
  </div>

  <div class="hidden mt-4 max-h-40 max-w-full overflow-auto">
    <Prism lang="html" code={code} />
  </div>
</div>
